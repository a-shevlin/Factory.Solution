@{
  Layout = "_Layout";
}

@using Factory.Models;

@if(@Model.Count == 0)
{
  <h4>No Machines have been added yet.</h4>
}

<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Model}", "Details", new { id = machine.Id })</li>
  }
</ul>

<hr>
<div class="rightBtn">
  @Html.ActionLink("Add Machine", "Create", "Machine", null, new { @class="htmlButton"})
</div>
