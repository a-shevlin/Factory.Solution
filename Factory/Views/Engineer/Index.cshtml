@{
  Layout = "_Layout";
}

@using Factory.Models;

@if(@Model.Count == 0)
{
  <h4>No Engineers have been added yet.</h4>
}

<ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.Id })</li>
  }
</ul>

<hr>
<div class="rightBtn">
  @Html.ActionLink("Add Engineer", "Create", "Engineer", null, new { @class="htmlButton"})
</div>
